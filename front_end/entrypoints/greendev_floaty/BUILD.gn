  entrypoint = "FloatyEntrypoint.ts"

  deps = [
    "../../core/common:bundle",
    "../../core/host:bundle",
    "../../core/i18n:bundle",
    "../../core/root:bundle",
    "../../core/sdk:bundle",
    "../../core/sdk:meta",
    "../../entrypoints/inspector_main:meta",
    "../../entrypoints/main:meta",
    "../../foundation:bundle",
    "../../generated",
    "../../models/ai_assistance:bundle",
    "../../models/workspace:meta",
    "../../panels/greendev:greendev_shared",
    "../../panels/sensors:meta",
  ]

  visibility = [
    ":*",
    "../../:*",
  ]
}
